---
import "../styles/global.css";
import FormAgregar from "../components/formAgregar.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TO-DO</title>
  </head>
  <body class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-full max-w-2xl bg-white shadow-md rounded-4xl p-6">
      <header class="text-center mb-6">
        <h1 class="text-3xl font-bold">TO-DO</h1>
      </header>

      <!-- Formulario para agregar tareas -->
      <FormAgregar />

      <!-- Botones de filtro -->
      <div class="flex justify-center gap-4 mt-6 mb-4">
        <button
          data-filtro="todas"
          class="filtro bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
        >
          Todas
        </button>
        <button
          data-filtro="incompletas"
          class="filtro bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
        >
          Incompletas
        </button>
        <button
          data-filtro="completas"
          class="filtro bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
        >
          Completas
        </button>
      </div>

      <!-- Lista din√°mica de tareas -->
      <ul id="lista-tareas" class="space-y-4"></ul>

      <!-- Bot√≥n para limpiar tareas completadas -->
      <button
        id="btn-limpiar"
        class="w-full mt-6 bg-gray-400 hover:bg-gray-600 text-white py-2 px-4 rounded"
      >
        Clear completed
      </button>
    </div>

    <!-- Template para clonar tareas -->
    <template id="tarea-template">
      <li>
        <div class="flex items-center justify-between gap-4 p-4 bg-white rounded shadow">
          <button
            data-toggle
            class="text-xl w-7 h-7 flex items-center justify-center rounded-full border transition bg-white text-gray-800 border-gray-300 hover:bg-gray-100"
          ></button>
          <span class="flex-grow text-lg text-gray-800"></span>
          <button
            data-borrar
            class="text-white bg-red-500 hover:bg-red-700 px-3 py-1 rounded"
          >
            üóëÔ∏è
          </button>
        </div>
      </li>
    </template>

    <!-- Script principal -->
    <script type="module" src="/src/script.ts"></script>
  </body>
</html>
